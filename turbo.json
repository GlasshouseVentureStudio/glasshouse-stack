{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"inputs": ["$TURBO_DEFAULT", ".env*"],
			"outputs": ["dist/**", ".next/**", "!.next/cache/**", "storybook-static/**"],
			"dependsOn": ["^build"]
		},
		"chromatic": {},
		"test-storybook": {
			"cache": false,
			"outputs": ["coverage/**"]
		},
		"lint": {
			"cache": false
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"clean": {
			"cache": false
		}
	},
	"ui": "tui"
}
